<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="debugprint" type="ConsoleAppender">
  </appender>

  <appender name="Dbgview" type="OutputDebugStringAppender"></appender>

  <appender name="emailer" type="EmailAppender">
    <threshold value="ERROR" />
    <server name="wyp-smtp" port="25" />
    <subject value="log4VBA Error" />
    <sender value="bpo@robotparade.co.uk" />
    <receiver value="bo139@westyorkshire.pnn.police.uk" />
  </appender>

  <appender name="debugFile" type="FileAppender">
    <threshold value="DEBUG" />
    <file value="debug.log" />
    <appendToFile value="true" />
    <lockingModel value="MinimalLock" />
  </appender>
  
  <logger name="RunTest">
    <level value="DEBUG" />
    <appender-ref ref="Dbgview" />
    <appender-ref ref="debugFile" />
  </logger>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="Dbgview" />
    <appender-ref ref="debugprint" />
    <appender-ref ref="emailer" />
  </root>
</log4net>
  